    h1 {
        font-size: 30px;
        font-weight: 600;
        color: #333333;
        padding: 20px 0 30px;
    }

    h2 {
        font-size: 20px;
        font-weight: 600;
        margin: 20px 0 20px;
    }

    h3 {
        font-size: 16px;
        font-weight: 600;
        margin: 0 0 20px;
    }

    .a-noline {
        text-decoration: none;
    }

    .serverload {
        margin-top: 20px;
    }

    .url {
        line-height: 58px;
    }

    .text {
        color: #666666;
        margin: 10px 0;
    }
</style>

</html>